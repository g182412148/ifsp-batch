<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>ifsp-dispatcher</display-name>
  <filter>
    <filter-name>traceId</filter-name>
    <filter-class>com.ruim.ifsp.ripples.web.filter.TraceMDCFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>traceId</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>com.scrcu.ebank.ebap.web.filter.IfspHttpEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>ifsp</servlet-name>
    <servlet-class>com.scrcu.ebank.ebap.web.servlet.IfspDispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath*:com/scrcu/ebank/ebap/config/spring-context.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
    <async-supported>true</async-supported>
  </servlet>
  <servlet-mapping>
    <servlet-name>ifsp</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>